<div class="row ml-3 mr-3">
  <div class="col-lg-6 col-md-12 col-sm-12 text-left mb-3">
    <%= image_tag @place.image_url,style: "width:90%;border-radius:5%;" ,class: "border border-dark" %>
  </div>
  <div class="col-lg-6 col-md-12 col-sm-12">
    <h2 class="border-bottom border-warning mb-3"><%= @place.name %></h2>
    <p class="border-bottom"><%= @place.description %></p>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12">
    <%= render 'map' %>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12">
    <h3 class="mt-5 border-bottom"><i class="fa fa-commenting-o fa-lg "></i> 皆に<%= @place.name %>をおすすめする！</h3>
  </div>


  <div class="col-lg-12 col-md-12 col-sm-12 mt-3 mb-3">
    <%= form_with model:[@place,@review] do |f| %>
    <%= f.text_area :review, placeholder: "レビュー", class: "form-control mb-3", rows: "5" %>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
  <div>
    <h3 class="mt-5 border-bottom border-success">コメント一覧</h3>
    <div id= "auto-reviews" class="mt-5">
    <h3>コメント一覧</h3>
    <div id= "auto-reviews">
      <%= render @reviews %>
    </div>
  </div>
</div>
